<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="43dp"
            android:orientation="vertical"

            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                android:textSize="22sp"
                android:text=""
                ></TextView>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginTop="40sp"
                android:layout_marginLeft="20sp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:text="Your Vehicle : AP05CY5599" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="50sp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="As per our recent data from your Vehicle last recieved at 14:22" />

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="126dp"
                android:layout_marginTop="40sp"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                >

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_marginTop="5sp"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="CO2" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="SO2" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="NO2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView32"
                        android:textColor="@color/md_red_400"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5sp"
                        android:layout_height="40sp"
                        android:gravity="center"
                        android:text="300ppm " />
                    <!--bro , here add an arrow up-->
                    <TextView
                        android:id="@+id/textView33"
                        android:textColor="@color/md_green_400"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:gravity="center"
                        android:text="2ppm" />

                    <TextView
                        android:id="@+id/textView34"
                        android:textColor="@color/md_red_400"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:gravity="center"
                        android:text="250ppm" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_marginTop="5sp"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:src="@drawable/arrowup" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="fill_parent"
                        android:layout_height="40sp"
                        android:src="@drawable/arrowdown" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrowup" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="409dp"
                android:layout_height="62dp" />

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="148dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@android:color/holo_green_dark">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textStyle="bold"

                    android:layout_marginTop="30sp"
                    android:layout_marginRight="90sp"
                    android:text="Your Vehicle is safe , We are monitoring it round the clock"
                    android:textColor="@color/white"
                    android:fontFamily="@font/amaranth_bold"
                    android:textFontWeight="600" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/safe"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="137dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@color/md_red_400">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="30sp"

                    android:layout_marginRight="90sp"

                    android:fontFamily="@font/amaranth_bold"
                    android:gravity="right"
                    android:text="ATTENTION REQUIRED!\nYour Vehicle is at risk."
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/danger" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="137dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@color/md_blue_200">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="30sp"
                    android:textSize="20sp"

                    android:layout_marginRight="90sp"

                    android:fontFamily="@font/amaranth_bold"
                    android:gravity="right"
                    android:text="Data Insufficient to provide Insights"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50sp"
                ></Space>

        </LinearLayout>
    </ScrollView>
</FrameLayout>